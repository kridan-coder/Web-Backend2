@model Backend2.Models.CalculatorModel

@{
    ViewBag.Title = "Hello Forms";
}

@*<div class="form-group">
    <input asp-for="Name" class="form-control" />
    <span asp-validation-for="Name"></span>
</div>*@

<h2>Calculator</h2>

<form asp-action="ModelBindingInSeparateModel">
    <div class="my-own-form">
        <input type="number" asp-for="Operand1" class="form-control" />
        <span asp-validation-for="Operand1"></span>
    </div>

    <select asp-for="Option">
        <option>+</option>
        <option>-</option>
        <option>*</option>
        <option>/</option>
    </select>

    <div class="my-own-form">
        <input type="number" asp-for="Operand2" class="form-control" />
        <span asp-validation-for="Operand2"></span>
    </div>

    <button type="submit" class="btn btn-primary">Calculate</button>

    @if (Model.Result != null)
    {
        <div class="my-own-form"> = @Model.Result</div>
    }

</form>